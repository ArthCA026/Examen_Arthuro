@{
    ViewBag.Title = "Contact";
}
<main aria-labelledby="title">
</main>
<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <h1 style="font-size: 24px;">Registro de Matrículas</h1>
                @using (Html.BeginForm("RegistrarMatricula", "Matriculas", FormMethod.Post, new { @class = "pt-3" }))
                {
                    <div class="form-group">
                        @Html.TextBox("Nombre", null, new { @class = "form-control form-control-lg", placeholder = "Nombre del estudiante" })
                    </div>
                    <div class="form-group">
                        @Html.TextBox("Monto", null, new { @class = "form-control form-control-lg", placeholder = "Monto del pago en números" })
                    </div>
                    <div class="form-group">
                        @Html.DropDownList("TipoCurso", new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Matematicas", Value = "1" },
                            new SelectListItem { Text = "Ciencias", Value = "2" },
                            new SelectListItem { Text = "Ingles", Value = "3" }
                        }, "Seleccione el tipo de curso", new { @class = "form-control form-control-lg" })
                    </div>
                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Registrar Matrícula">
                    </div>
                }
            </div>
        </div>
    </div>
</div>

